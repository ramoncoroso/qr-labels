{
  "name": "qr_label_system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets --external:/fonts/* --external:/images/*",
    "build:css": "tailwindcss --input=css/app.css --output=../priv/static/assets/app.css",
    "watch": "esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets --external:/fonts/* --external:/images/* --watch",
    "deploy": "npm run build && npm run build:css -- --minify"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "jspdf": "^2.5.1",
    "jsbarcode": "^3.11.6",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "qrcode": "^1.5.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  }
}
